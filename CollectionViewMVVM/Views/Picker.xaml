<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectionViewMVVM.Views.Picker"
             Title="Picker">
    <VerticalStackLayout>
        <Label 
            Text="Location pls:!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry
            x:Name="entry"
            Placeholder="put location here plese, you can write 'all' to show all the monkeys"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Text="{Binding SelectedFilter}"
            />
        <Button
            Command="{Binding SingleSelectCommand}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            />
    </VerticalStackLayout>
</ContentPage>